<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_350dp"
    android:padding="@dimen/dp_15dp"
    android:gravity="bottom"
    android:background="@color/bg_title"
    tools:context=".NavHeaderActivity">
    <ImageView
        android:id="@+id/img_nav_header"
        android:layout_width="@dimen/dp_100dp"
        android:layout_height="@dimen/dp_100dp"
        android:src="@drawable/plant"/>
    <TextView
        android:id="@+id/txv_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Welcome..."
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/sp_50sp"/>
    <TextView
        android:id="@+id/txv_email_nav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_30sp"/>
</LinearLayout>