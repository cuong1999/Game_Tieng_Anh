<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15dp"
    android:id="@+id/item_list_word">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lvWord_eng"
            android:textSize="@dimen/sp_20sp_text"
            android:textStyle="bold"
            android:text="English"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lvWord_vi"
            android:layout_below="@id/title"
            android:text="Vietnamese"
            android:textSize="@dimen/dp_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right">
        <ImageView
            android:id="@+id/img_speaker"
            android:layout_width="@dimen/dp_50dp"
            android:layout_height="@dimen/dp_50dp"
            android:src="@drawable/speaker"/>
    </LinearLayout>

</LinearLayout>