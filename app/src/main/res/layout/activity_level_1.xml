<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/bg_title">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="@dimen/dp_150dp"
                android:layout_height="@dimen/dp_100dp"
                android:src="@drawable/quesansw" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/txv_VocabularyLv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Vocabulary"
                    android:textSize="@dimen/sp_50sp"
                    android:layout_marginTop="@dimen/dp_40dp"
                    android:layout_marginBottom="@dimen/dp_40dp"/>

                <ImageButton
                    android:id="@+id/imbtn_favoriteLv1"
                    android:layout_width="@dimen/dp_70dp"
                    android:layout_height="@dimen/dp_70dp"
                    android:src="@drawable/custom_imbtn_favorite"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/dp_20dp"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/imv_PictureLv1"
                android:layout_width="@dimen/dp_350dp"
                android:layout_height="@dimen/dp_350dp"
                android:src="@drawable/school"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/imbtn_SpeakerLv1"
                android:layout_width="@dimen/dp_100dp"
                android:layout_height="@dimen/dp_100dp"
                android:src="@drawable/speaker"
                android:layout_marginTop="@dimen/dp_15dp"
                android:layout_marginBottom="@dimen/dp_15dp"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/txv_MeanLv1"
                android:layout_width="@dimen/dp_550dp"
                android:layout_height="@dimen/dp_150dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:background="@color/nav">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imv_back"
                    android:background="@drawable/custom_imv_back"
                    android:layout_width="@dimen/dp_50dp"
                    android:layout_height="@dimen/dp_50dp">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imv_favorite"
                    android:background="@drawable/custom_imv_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imv_home"
                    android:background="@drawable/custom_imv_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imv_restore"
                    android:background="@drawable/custom_imv_restore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imv_next"
                    android:background="@drawable/custom_imv_next"
                    android:layout_width="@dimen/dp_50dp"
                    android:layout_height="@dimen/dp_50dp">
                </ImageButton>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="@dimen/dp_329dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_list"/>
</androidx.drawerlayout.widget.DrawerLayout>