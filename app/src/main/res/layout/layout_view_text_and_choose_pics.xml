<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_title">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                android:layout_width="500dp"
                android:layout_height="300dp"
                android:layout_marginTop="@dimen/dp_20dp"
                android:background="@drawable/custom_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="ahfdta"
                android:textSize="@dimen/sp_30sp"
                android:gravity="center"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <ImageView
                android:id="@+id/image1_viewText_and_choose_pic"
                android:layout_width="@dimen/dp_250dp"
                android:layout_height="@dimen/dp_150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.125"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.116"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/image2_viewText_and_choose_pic"
                android:layout_width="@dimen/dp_250dp"
                android:layout_height="@dimen/dp_150dp"
                tools:layout_editor_absoluteX="@dimen/dp_313dp"
                tools:layout_editor_absoluteY="@dimen/dp_40dp"
                app:layout_constraintStart_toEndOf="@+id/image1_viewText_and_choose_pic"
                app:layout_constraintBaseline_toBaselineOf="@+id/image1_viewText_and_choose_pic"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/image3_viewText_and_choose_pic"
                android:layout_width="@dimen/dp_250dp"
                android:layout_height="@dimen/dp_150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image1_viewText_and_choose_pic"
                app:layout_constraintVertical_bias="0.261"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="44dp" />

            <ImageView
                android:id="@+id/image4_viewText_and_choose_pic"
                android:layout_width="@dimen/dp_250dp"
                android:layout_height="@dimen/dp_150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image2_viewText_and_choose_pic"
                app:layout_constraintVertical_bias="0.257"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="322dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>