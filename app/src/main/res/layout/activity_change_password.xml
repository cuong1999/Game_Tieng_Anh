<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_title"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="@dimen/sp_50sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Password: "
            android:textStyle="bold"
            android:textSize="@dimen/sp_30sp"
            android:layout_marginBottom="@dimen/dp_24dp"/>

        <EditText
            android:id="@+id/edt_Old_pass"
            android:layout_width="@dimen/dp_350dp"
            android:layout_height="@dimen/dp_70dp"
            android:background="@drawable/custom_tv"
            android:hint="Input current pass..."
            android:padding="@dimen/dp_15dp"
            android:password="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password: "
            android:textStyle="bold"
            android:textSize="@dimen/sp_30sp"
            android:layout_marginTop="@dimen/dp_24dp"
            android:layout_marginBottom="@dimen/dp_24dp"/>

        <EditText
            android:id="@+id/edt_New_pass"
            android:layout_width="@dimen/dp_350dp"
            android:layout_height="@dimen/dp_70dp"
            android:background="@drawable/custom_tv"
            android:hint="Input new pass..."
            android:padding="@dimen/dp_15dp"
            android:layout_marginBottom="@dimen/dp_24dp"
            android:password="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password: "
            android:textStyle="bold"
            android:textSize="@dimen/sp_30sp"
            android:layout_marginBottom="@dimen/dp_24dp"/>

        <EditText
            android:id="@+id/edt_Confirm_pass"
            android:layout_width="@dimen/dp_350dp"
            android:layout_height="@dimen/dp_70dp"
            android:background="@drawable/custom_tv"
            android:hint="Input re-pass..."
            android:padding="@dimen/dp_15dp"
            android:password="true"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_Save_change"
            android:layout_width="@dimen/dp_200dp"
            android:layout_height="@dimen/dp_85dp"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_30sp"
            android:layout_marginRight="@dimen/dp_85dp"
            android:background="@drawable/custom_btn_blue"/>

        <Button
            android:id="@+id/btn_Cancel_change"
            android:layout_width="@dimen/dp_200dp"
            android:layout_height="@dimen/dp_85dp"
            android:text="Cancel"
            android:background="@drawable/custom_btn_red"
            android:textSize="@dimen/sp_30sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>


    </LinearLayout>

</LinearLayout>
