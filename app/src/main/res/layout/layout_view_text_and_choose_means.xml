<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bg_title">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <TextView
                    android:layout_width="500dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="@dimen/dp_20dp"
                    android:background="@drawable/custom_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="ahfdta"
                    android:textSize="@dimen/sp_30sp"
                    android:gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">

                <Button
                    android:id="@+id/btn_answer1_screen3"
                    android:layout_width="@dimen/dp_250dp"
                    android:layout_height="@dimen/dp_150dp"
                    android:background="@drawable/custom_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.104"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.262"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn_answer2_screen3"
                    android:layout_width="@dimen/dp_250dp"
                    android:layout_height="@dimen/dp_150dp"
                    android:background="@drawable/custom_tv"
                    app:layout_constraintBaseline_toBaselineOf="@id/btn_answer1_screen3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_answer1_screen3"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn_answer3_screen3"
                    android:layout_width="@dimen/dp_250dp"
                    android:layout_height="@dimen/dp_150dp"
                    android:layout_marginStart="@dimen/dp_36dp"
                    android:layout_marginLeft="@dimen/dp_36dp"
                    android:background="@drawable/custom_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_answer1_screen3"
                    app:layout_constraintVertical_bias="0.324"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn_answer4_screen3"
                    android:layout_width="@dimen/dp_250dp"
                    android:layout_height="@dimen/dp_150dp"
                    android:layout_marginStart="@dimen/dp_32dp"
                    android:layout_marginLeft="@dimen/dp_32dp"
                    android:background="@drawable/custom_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_answer3_screen3"
                    app:layout_constraintTop_toBottomOf="@id/btn_answer2_screen3"
                    app:layout_constraintVertical_bias="0.324"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@color/nav">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imv_back"
                    android:background="@drawable/custom_imv_back"
                    android:layout_width="@dimen/dp_50dp"
                    android:layout_height="@dimen/dp_50dp">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imv_favorite"
                    android:background="@drawable/custom_imv_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imv_home"
                    android:background="@drawable/custom_imv_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/imv_restore"
                    android:background="@drawable/custom_imv_restore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imv_next"
                    android:background="@drawable/custom_imv_next"
                    android:layout_width="@dimen/dp_50dp"
                    android:layout_height="@dimen/dp_50dp">
                </ImageButton>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="@dimen/dp_329dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_list"/>
</androidx.drawerlayout.widget.DrawerLayout>